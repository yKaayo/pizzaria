generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  password   String
  name       String
  email      String   @unique
  number     String   @unique
  is_admin   Boolean  @default(false)
  created_at DateTime @default(now())
  Order      Order[]

  @@map("users")
}

model Pizza {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  quantity Int
  Order    Order[]
  Image    Image?

  @@map("pizzas")
}

model Order {
  id      Int   @id @default(autoincrement())
  userId  Int
  pizzaId Int
  user    User  @relation(fields: [userId], references: [id])
  pizza   Pizza @relation(fields: [pizzaId], references: [id])

  @@map("orders")
}

model Image {
  id      Int    @id @default(autoincrement())
  path    String @unique
  pizzaId Int    @unique
  pizza   Pizza  @relation(fields: [pizzaId], references: [id])

  @@map("images")
}
